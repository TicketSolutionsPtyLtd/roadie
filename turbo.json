{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "pnpm-lock.yaml"],
  "globalEnv": ["CI", "NODE_ENV"],
  "tasks": {
    "prepare": {
      "dependsOn": ["^build"],
      "inputs": ["package.json"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx,css,json}",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "out/**",
        "!.next/cache/**",
        ".turbo/**",
        "*.tsbuildinfo"
      ],
      "outputLogs": "hash-only"
    },
    "typecheck": {
      "dependsOn": ["@oztix/roadie-core#build"],
      "inputs": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json",
        "!**/*.test.{ts,tsx}",
        "!**/roadie-core/**",
        "!**/styled-system/**"
      ],
      "outputs": [".turbo/**", "*.tsbuildinfo"],
      "outputLogs": "hash-only"
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{js,jsx,ts,tsx}", ".eslintrc.*", "package.json"],
      "outputs": [".turbo/**"],
      "outputLogs": "hash-only"
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.{js,jsx,ts,tsx}", ".eslintrc.*", "package.json"],
      "outputs": ["src/**/*"],
      "outputLogs": "errors-only"
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.{js,jsx,ts,tsx}",
        "**/*.test.{js,jsx,ts,tsx}",
        "jest.config.*",
        "package.json"
      ],
      "outputs": ["coverage/**", ".turbo/**"],
      "outputLogs": "hash-only"
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": [
        "@oztix/roadie-core#build",
        "@oztix/roadie-components#build"
      ],
      "cache": false,
      "persistent": true
    },
    "format": {
      "inputs": ["**/*.{js,jsx,ts,tsx,md,mdx,json}"],
      "outputs": ["**/*.{js,jsx,ts,tsx,md,mdx,json}"],
      "outputLogs": "errors-only"
    },
    "format:check": {
      "inputs": ["**/*.{js,jsx,ts,tsx,md,mdx,json}"],
      "outputs": [".turbo/**"],
      "outputLogs": "hash-only"
    }
  }
}
