{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build:tokens": {
      "outputs": ["src/tokens/**"]
    },
    "build:panda": {
      "dependsOn": ["build:tokens", "build"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^build:tokens", "^build:panda"],
      "outputs": ["dist/**", "out/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "format": {
      "cache": false,
      "outputs": []
    },
    "format:check": {
      "cache": false,
      "outputs": []
    },
    "lint": {
      "cache": false,
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": false
    }
  }
}
