{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "isolatedModules": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "tsBuildInfoFile": "./tsconfig.core.tsbuildinfo"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
