{
  "name": "@oztix/roadie-core",
  "version": "1.0.0",
  "description": "The design tokens and styled system for Roadie Design System at Oztix",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "pnpm build:tokens",
    "clean": "rm -rf node_modules dist",
    "build": "tsup",
    "build:panda": "panda codegen --c panda.config.js && panda emit-pkg --base dist",
    "build:tokens": "node scripts/build-panda-tokens.js && node scripts/build-figma-tokens.js",
    "dev": "run-p dev:*",
    "dev:tsup": "tsup --watch",
    "dev:tokens": "chokidar \"src/tokens/{tokens,semantic-tokens}.json\" -i \"**/panda/**\" -i \"**/figma/**\" -c \"pnpm build:tokens\"",
    "format:check": "prettier --ignore-path ../../.prettierignore --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format": "prettier --ignore-path ../../.prettierignore --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint:fix": "eslint --ignore-path ../../.eslintignore . --ext .ts,.tsx --fix",
    "lint": "eslint --ignore-path ../../.eslintignore . --ext .ts,.tsx",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "author": {
    "name": "Luke Brooker",
    "email": "mail@lukebrooker.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@pandacss/dev": "0.48.1",
    "@types/node": "22.10.2",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "1.6.0",
    "chokidar-cli": "3.0.0",
    "npm-run-all": "4.1.5",
    "tsup": "8.0.0",
    "typescript": "5.7.2",
    "vitest": "1.6.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./presets": {
      "types": "./dist/presets/index.d.ts",
      "import": "./dist/presets/index.mjs",
      "require": "./dist/presets/index.js"
    },
    "./css": {
      "types": "./dist/css/index.d.ts",
      "require": "./dist/css/index.mjs",
      "import": "./dist/css/index.mjs"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "require": "./dist/tokens/index.mjs",
      "import": "./dist/tokens/index.mjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/types/index.mjs",
      "import": "./dist/types/index.mjs"
    },
    "./patterns": {
      "types": "./dist/patterns/index.d.ts",
      "require": "./dist/patterns/index.mjs",
      "import": "./dist/patterns/index.mjs"
    },
    "./jsx": {
      "types": "./dist/jsx/index.d.ts",
      "require": "./dist/jsx/index.mjs",
      "import": "./dist/jsx/index.mjs"
    },
    "./styles.css": "./dist/styles.css",
    "./recipes": {
      "types": "./dist/recipes/index.d.ts",
      "require": "./dist/recipes/index.mjs",
      "import": "./dist/recipes/index.mjs"
    }
  }
}
