{
  "name": "@oztix/roadie-core",
  "version": "1.2.0",
  "description": "The design tokens and styled system for Roadie Design System at Oztix",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/TicketSolutionsPtyLtd/roadie"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./presets": {
      "types": "./dist/presets/index.d.ts",
      "import": "./dist/presets/index.js",
      "require": "./dist/presets/index.js"
    },
    "./css": {
      "types": "./dist/css/index.d.ts",
      "require": "./dist/css/index.js",
      "import": "./dist/css/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "require": "./dist/tokens/index.js",
      "import": "./dist/tokens/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/types/index.js",
      "import": "./dist/types/index.js"
    },
    "./patterns": {
      "types": "./dist/patterns/index.d.ts",
      "require": "./dist/patterns/index.js",
      "import": "./dist/patterns/index.js"
    },
    "./jsx": {
      "types": "./dist/jsx/index.d.ts",
      "require": "./dist/jsx/index.js",
      "import": "./dist/jsx/index.js"
    },
    "./recipes": {
      "types": "./dist/recipes/index.d.ts",
      "require": "./dist/recipes/index.js",
      "import": "./dist/recipes/index.js"
    },
    "./tokens.css": "./dist/tokens.css",
    "./utilities.css": "./dist/utilities.css",
    "./styles.css": "./dist/styles.css"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf node_modules dist",
    "build": "pnpm build:tokens && tsup && pnpm build:panda && pnpm build:copy-css",
    "build:copy-css": "cp src/tokens/css/tokens.css dist/tokens.css && cp src/tokens/css/utilities.css dist/utilities.css",
    "build:panda": "panda codegen --c panda.config.js && panda emit-pkg --base dist && prettier --write package.json",
    "build:tokens": "node scripts/build-panda-tokens.js && node scripts/build-css-tokens.js && node scripts/build-figma-tokens.js",
    "dev": "run-p dev:*",
    "dev:tsup": "tsup --watch",
    "dev:tokens": "chokidar \"src/tokens/{tokens,semantic-tokens}.json\" -i \"**/panda/**\" -i \"**/css/**\" -i \"**/figma/**\" -c \"pnpm build:tokens\"",
    "format:check": "prettier --ignore-path ../../.prettierignore --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format": "prettier --ignore-path ../../.prettierignore --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "author": {
    "name": "Luke Brooker",
    "email": "mail@lukebrooker.com"
  },
  "license": "ISC",
  "devDependencies": {
    "@pandacss/dev": "1.4.3",
    "@pandacss/types": "1.4.3",
    "@types/node": "24.9.2",
    "@vitejs/plugin-react": "5.1.0",
    "@vitest/coverage-v8": "4.0.4",
    "chokidar-cli": "3.0.0",
    "npm-run-all": "4.1.5",
    "tsup": "8.5.0",
    "vitest": "4.0.4"
  }
}
