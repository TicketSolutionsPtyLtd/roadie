{
  "name": "@oztix/roadie-components",
  "version": "1.0.0",
  "description": "The components for Roadie Design System at Oztix",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf node_modules dist",
    "dev": "tsup --watch",
    "pretest": "panda codegen",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "format": "prettier --ignore-path ../../.prettierignore --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --ignore-path ../../.prettierignore --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "eslint --ignore-path ../../.eslintignore . --ext .ts,.tsx",
    "lint:fix": "eslint --ignore-path ../../.eslintignore . --ext .ts,.tsx --fix"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@oztix/roadie-core": "workspace:*",
    "react-aria-components": "^1.0.0"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.48.0",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^15.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "jsdom": "^24.1.3",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.0"
  },
  "author": {
    "name": "Luke Brooker",
    "email": "mail@lukebrooker.com"
  },
  "license": "ISC",
  "turbo": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    }
  }
}
