{
  "extends": "../../tsconfig.react.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declarationMap": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.components.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/components/**/*.ts",
    "src/components/**/*.tsx"
  ],
  "exclude": ["dist", "node_modules", "roadie-core"],
  "references": [{ "path": "../core" }]
}
